<div>
    <h1>Productos</h1>
    {{#if hayProductos}}
    <table class="table">
        <thead>
            <tr>
            <th scope="col">.</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
            </tr>
        </thead>
        {{#each productos}}
        <tbody>
            <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.nombre}}</td>
            <td>{{this.precio}}</td>
            <td>{{this.img}}</td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
{{else}}
<h2 class="alert alert-warning">No se encontraron productos</h2>
{{/if}}
<button  type="button" class="btn btn=light"> <a href="/">Cargar nuevos productos</a></button>
